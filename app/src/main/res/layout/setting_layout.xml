<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="370dp"
    android:layout_height="500dp"
    android:layout_gravity="center"
    android:background="@drawable/home_dialog_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<!--    close button-->
    <Button
        android:id="@+id/setting_close"
        style="@android:style/Widget.Material.Light.ImageButton"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:background="@null"
        android:backgroundTint="#787878"
        android:backgroundTintMode="src_in"
        android:text="X"
        android:fontFamily="@font/baloo_tamma"
        android:padding="0dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="25sp"
        app:cornerRadius="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
<!--    title-->
    <TextView
        android:id="@+id/setting_title"
        android:text="Cài đặt"
        android:textColor="@color/nav_button"
        android:fontFamily="@font/baloo_tamma"
        android:textSize="35dp"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/setting_close"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
<!--    userId-->
    <TextView
        android:id="@+id/setting_id"
        android:text="Mã id: 123456"
        android:textColor="@color/black"
        android:fontFamily="@font/baloo"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:layout_marginTop="40dp"
        android:paddingLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/setting_title"
        app:layout_constraintStart_toStartOf="parent"/>
<!--    logout button-->
    <Button
        android:id="@+id/setting_logout"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginBottom="20dp"
        android:background="@null"
        android:backgroundTint="@color/menu_button"
        android:backgroundTintMode="src_in"
        android:fontFamily="@font/baloo_tamma"
        android:text="Đăng xuất"
        android:textSize="20dp"
        app:cornerRadius="30dp"
        app:strokeWidth="1dp"
        android:paddingTop="10dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/setting_id"/>
</androidx.constraintlayout.widget.ConstraintLayout>