<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.RankFragment">
<!--content-->
    <LinearLayout
        android:id="@+id/rank_content"
        android:background="@color/menu_button"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:text="Xếp hạng"
            android:textColor="@color/white"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </LinearLayout>
<!--title-->
    <LinearLayout
        android:weightSum="5"
        android:id="@+id/rank_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/rank_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/rank_title_rank"
            android:text="Hạng"
            android:textColor="@color/nav_button"
            android:textSize="20sp"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/rank_title_nick"
            android:text="Người dùng"
            android:textColor="@color/nav_button"
            android:textSize="20sp"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_weight="3"/>
        <TextView
            android:id="@+id/rank_title_elo"
            android:text="Elo"
            android:textColor="@color/nav_button"
            android:textSize="20sp"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_weight="1"/>
    </LinearLayout>
<!--    user 's rank-->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rank_user"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/rank_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

<!--    my rank-->
    <LinearLayout
        android:weightSum="5"
        android:id="@+id/rank_myRank"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:background="@color/menu_button"
        app:layout_constraintTop_toBottomOf="@id/rank_user"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/rank_myRank_rank"
            android:text="1000"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_weight="1"/>
        <LinearLayout
            android:orientation="horizontal"
            android:textColor="@color/nav_button"
            android:textSize="15dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_weight="3">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp">
                <ImageView
                    android:id="@+id/rank_myRank_avatar"
                    android:src="@drawable/avatar"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
            </androidx.cardview.widget.CardView>
            <TextView

                android:id="@+id/rank_myRank_nickname"
                android:text="Thịnh"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <TextView
            android:id="@+id/rank_myRank_elo"
            android:text="1000"
            android:textColor="@color/rank_elo"
            android:textSize="20sp"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_weight="1"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>