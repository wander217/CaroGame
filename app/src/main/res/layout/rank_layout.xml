<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/rank_myRank"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginTop="5dp"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    app:layout_constraintTop_toBottomOf="@id/rank_user"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:orientation="horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/rank_user_rank"
        android:text="1000"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_weight="1"/>
    <LinearLayout
        android:orientation="horizontal"
        android:textColor="@color/nav_button"
        android:textSize="15dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_weight="3">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp">
            <ImageView
                android:id="@+id/rank_user_avatar"
                android:src="@drawable/avatar"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
        </androidx.cardview.widget.CardView>
        <TextView

            android:id="@+id/rank_user_nickname"
            android:text="Thá»‹nh"
            android:maxLines="1"
            android:textColor="@color/nav_button"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <TextView
        android:id="@+id/rank_user_elo"
        android:text="1000"
        android:textColor="@color/rank_elo"
        android:textSize="20sp"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_weight="1"/>
</LinearLayout>