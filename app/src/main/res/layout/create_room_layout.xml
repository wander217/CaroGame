<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="370dp"
    android:layout_height="450dp"
    android:layout_gravity="center"
    android:paddingLeft="10dp"
    android:paddingRight="5dp"
    android:background="@drawable/home_dialog_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--    close button-->
    <Button
        android:id="@+id/create_room_close"
        style="@android:style/Widget.Material.Light.ImageButton"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:background="@null"
        android:backgroundTint="#787878"
        android:backgroundTintMode="src_in"
        android:text="X"
        android:fontFamily="@font/baloo_tamma"
        android:padding="0dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="25sp"
        app:cornerRadius="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <!--    title-->
    <TextView
        android:id="@+id/setting_title"
        android:text="TẠO PHÒNG"
        android:textColor="@color/nav_button"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/create_room_close"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
<!--    coin-->
    <LinearLayout
        android:id="@+id/coin_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/setting_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:text="Tiền cược:"
            android:fontFamily="@font/baloo_tamma"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/create_room_sub"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_marginLeft="45dp"
            android:background="@null"
            android:backgroundTint="@color/toggle_button"
            android:paddingLeft="10dp"
            app:cornerRadius="5dp"
            app:icon="@drawable/ic_sub"
            app:iconSize="20dp"
            app:iconTint="@color/black" />
        <TextView
            android:id="@+id/create_room_coin"
            android:text="2000"
            android:textSize="25sp"
            android:gravity="center"
            android:textColor="@color/nav_button"
            android:fontFamily="@font/baloo_tamma"
            android:layout_marginLeft="10dp"
            android:layout_width="100dp"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/create_room_add"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:backgroundTint="@color/toggle_button"
            android:paddingLeft="10dp"
            app:cornerRadius="5dp"
            app:icon="@drawable/ic_plus"
            app:iconSize="20dp"
            app:iconTint="@color/black" />
    </LinearLayout>
<!--    block-->
    <LinearLayout
        android:id="@+id/block_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/coin_setting"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:text="Chặn hai đầu:"
            android:fontFamily="@font/baloo_tamma"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/create_room_yes"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:background="@null"
            android:backgroundTint="@color/nav_button"
            android:paddingLeft="15dp"
            app:cornerRadius="10dp"
            android:text="Có"
            android:paddingTop="5dp"
            android:fontFamily="@font/baloo_tamma"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:iconTint="@color/black" />

        <Button
            android:id="@+id/create_room_no"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginLeft="15dp"
            android:background="@null"
            android:backgroundTint="@color/toggle_button"
            android:paddingLeft="15dp"
            app:cornerRadius="10dp"
            android:text="Không"
            android:paddingTop="5dp"
            android:fontFamily="@font/baloo_tamma"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:iconTint="@color/black" />
    </LinearLayout>
<!--    create button-->
    <Button
        android:id="@+id/create_room_room"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="10dp"
        android:background="@null"
        android:backgroundTint="@color/search_button"
        android:backgroundTintMode="src_in"
        android:paddingLeft="20dp"
        android:text="Tạo phòng"
        android:textSize="16sp"
        android:textStyle="bold"
        app:cornerRadius="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>