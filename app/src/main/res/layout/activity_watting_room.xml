<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WaitingRoomActivity">

    <!--    header-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/waiting_room_header"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/menu_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!--        back button-->
        <ImageView
            android:id="@+id/waiting_room_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_back"
            android:padding="2dp"
            android:layout_marginLeft="10dp"
            app:tint="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <!--content-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="Phòng chờ"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
<!--    player-->
    <LinearLayout
        android:id="@+id/waiting_room_player"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/waiting_room_header">
<!--        player 1-->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="170dp"
            android:gravity="center_horizontal"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/waiting_room_player1_avatar"
                    android:src="@drawable/avatar"
                    android:layout_width="150dp"
                    android:layout_height="150dp"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/waiting_room_player1_nickname"
                android:text="Thịnh"
                android:layout_width="150dp"
                android:maxLines="1"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/waiting_room_player1_elo"
                android:text="Elo: 10000"
                android:layout_width="150dp"
                android:maxLines="1"
                android:textSize="18dp"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:textColor="@color/nav_button"
                android:textAlignment="center"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
            android:text="VS"
            android:textColor="@color/menu_button"
            android:textStyle="bold"
            android:fontFamily="@font/baloo_tamma"
            android:textSize="40sp"
            android:gravity="center"
            android:paddingBottom="60dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
<!--        player 2-->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="170dp"
            android:gravity="center_horizontal"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/waiting_room_player2_avatar"
                    android:src="@drawable/ic_user"
                    android:layout_width="150dp"
                    android:layout_height="150dp"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/waiting_room_player2_nickname"
                android:text="Đối thủ"
                android:layout_width="150dp"
                android:maxLines="1"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/waiting_room_player2_elo"
                android:text="Elo: 1000"
                android:layout_width="150dp"
                android:maxLines="1"
                android:textSize="18dp"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:textColor="@color/nav_button"
                android:textAlignment="center"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
<!--    match info-->
    <androidx.cardview.widget.CardView
        android:id="@+id/waiting_room_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="2dp"
        android:background="@null"
        android:backgroundTint="@color/toggle_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/waiting_room_player">
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="20dp">
            <LinearLayout
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp">
                    <ImageView
                        android:src="@drawable/ic_room"
                        app:tint="@color/menu_button"
                        android:layout_width="25dp"
                        android:layout_height="25dp"/>
                    <TextView
                        android:id="@+id/waiting_room_id"
                        android:layout_marginLeft="5dp"
                        android:text="110"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/baloo_tamma"
                        android:layout_height="match_parent"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp">
                    <ImageView
                        android:src="@drawable/ic_fee"
                        app:tint="@color/menu_button"
                        android:layout_width="25dp"
                        android:layout_height="25dp"/>
                    <TextView
                        android:id="@+id/waiting_room_fee"
                        android:text="1000"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/baloo_tamma"
                        android:layout_height="match_parent"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:weightSum="2"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp">
                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/ic_game"
                        app:tint="@color/menu_button"
                        android:layout_width="25dp"
                        android:layout_height="25dp"/>
                    <TextView
                        android:id="@+id/waiting_room_match"
                        android:layout_marginLeft="5dp"
                        android:text="3 ván"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/baloo_tamma"
                        android:layout_height="match_parent"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/ic_player"
                        app:tint="@color/menu_button"
                        android:layout_width="25dp"
                        android:layout_height="25dp"/>
                    <TextView
                        android:id="@+id/waiting_room_player_count"
                        android:layout_marginLeft="5dp"
                        android:text="2/2"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/baloo_tamma"
                        android:layout_height="match_parent"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp">
                <ImageView
                    android:src="@drawable/ic_rule"
                    app:tint="@color/menu_button"
                    android:layout_width="25dp"
                    android:layout_height="25dp"/>
                <TextView
                    android:id="@+id/waiting_room_rule"
                    android:text="Chặn 2 đầu"
                    android:layout_marginLeft="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/baloo_tamma"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

<!--    player status-->
    <androidx.cardview.widget.CardView
        android:id="@+id/waiting_room_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/waiting_room_info">
        <TextView
            android:id="@+id/waiting_room_status_text"
            android:text="Đang chờ đối thủ"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="@color/status_text"
            android:background="@color/status_background"
            android:layout_width="match_parent"
            android:layout_height="100dp" />
    </androidx.cardview.widget.CardView>

<!--    ready button-->
    <Button
        android:id="@+id/waiting_room_ready"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="10dp"
        android:background="@null"
        android:backgroundTint="@color/search_button"
        android:backgroundTintMode="src_in"
        android:paddingRight="20dp"
        android:text="Sẵn sàng"
        android:textSize="16sp"
        android:textStyle="bold"
        app:cornerRadius="40dp"
        app:icon="@drawable/ic_game"
        app:iconGravity="end"
        app:iconSize="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>